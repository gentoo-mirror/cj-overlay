#!/bin/bash

log="/var/tmp/portage/*/*/temp/build.log"

if [ -z "$(ls $log 2> /dev/null)" ]; then
  echo "No running build found"
  exit 0
elif [ -z "$1" ]; then
  echo "Running builds - use number to select"
  ls $log | cat -n
else
  file=$(ls $log | sed -n "${1}p")
  if [ -z ${file} ]; then
    echo "Build number $1 not found"
    exit 1
  else
    tailf $file
  fi
fi
